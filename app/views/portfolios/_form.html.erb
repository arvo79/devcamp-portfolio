<%= form_for(portfolio_item) do |f| %>

  <% if portfolio_item.errors.any? %>
    <hr>
    <div id="error_explanation">
      <h2><%= pluralize(portfolio_item.errors.count, "error") %> prohibited this Portfolio Item from being saved:</h2>

      <ul>
      <% portfolio_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <hr>
  <div class="row">

    <div class="col-md-6">
    
      <div class="form-group">
        <strong><%= f.label :title %></strong>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <strong><%= f.label :subtitle %></strong>
        <%= f.text_field :subtitle, class: "form-control" %>
      </div>
    
      <div class="form-group">
        <label class="btn btn-success">
          Upload a main image file <%= f.file_field :main_image, style: "display:none;" %>
        </label>

        <label class="btn btn-success">
          Upload a thumb image file <%= f.file_field :thumb_image, style: "display:none;" %>
        </label>
      </div>
      <hr>

      <div>
        <p><strong>Technologies used: </strong>
          <%= link_to_add_association 'Add Technology', f, :technologies, class: "btn btn-success" %>
        </p>

        <%= f.fields_for :technologies do |technology_form| %>
          <%= render 'technology_fields', f: technology_form %>
        <% end %>
      </div>

    </div>
    
    <div class="col-md-6">

      <div class="form-group">
        <strong><%= f.label :body %></strong>
        <%= f.text_area :body, rows: 15, class: "form-control" %>
      </div>

      
    </div>

  </div>

  <div class="form-group">
    <%= f.submit 'Submit', class: "btn btn-primary btn-block" %>
  </div>
<% end %>
