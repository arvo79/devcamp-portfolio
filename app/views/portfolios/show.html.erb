<div class="container portfolio-container">
	<div class="row">

		<div class="col-md-6">
			<p><%= image_tag(portfolio_img(@portfolio_item.main_image, 'main'), width:'100%') unless @portfolio_item.main_image.nil? %></p>
			<p>
				<strong>Technologies used:</strong> 
				<% @portfolio_item.technologies.each do |t| %>
					<%= t.name + ' ' %>
				<% end %>
			</p>
			<p>
				<% if logged_in?(:site_admin) %>
					<%= link_to 'Edit Portfolio Item', edit_portfolio_path(@portfolio_item) %> / 
					<%= link_to 'Delete Portfolio Item', @portfolio_item,
					method: :delete, data: { confirm: 'Are you sure?' } %>
				<% end %>
			</p>
			<p><%= link_to 'All Portfolio Items', portfolios_path %></p>
		</div>

		<div class="col-md-6">
			<h2><%= @portfolio_item.title %></h2>
			<em><%= @portfolio_item.subtitle %></em>
			<p><%= simple_format(@portfolio_item.body) %></p>
		</div>

	</div>
</div>

