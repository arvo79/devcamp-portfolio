<p id="notice"><%= notice %></p>

<h2><%= @portfolio_item.title %></h2>
<p>
	<%= link_to 'Portfolios Overview', portfolios_path, style: 'margin-right:50px' %>
	<%= link_to 'Edit Portfolio', edit_portfolio_path(@portfolio_item), style: 'margin-right:50px' %>
	<%= link_to 'Delete', @portfolio_item, method: :delete, data: { confirm: 'Delete Portfolio Item?' } %>
</p>
<hr>
<br>
<p><%= image_tag @portfolio_item.main_image unless @portfolio_item.main_image.nil? %></p>
<em><%= @portfolio_item.subtitle %></em>
<p><%= @portfolio_item.body %></p>
<p>
	<strong>Technologies used:</strong> 
	<% @portfolio_item.technologies.each do |t| %>
		<%= t.name + ' ' %>
	<% end %>
</p>