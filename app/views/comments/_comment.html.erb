<div class="comment-card">
	<div class="card">
		<div class="card-block">
			<div class="row">
				<div class="col-md-2">
					<%= gravatar_helper comment.user %>
				</div>

				<div class="col-md-10">
					<div>
						<%= comment.content %>
					</div>
					<div class="comment-attribution">
					  posted <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago
				  	by <span class="commentator-name"><%= comment.user.name %></span>
				  </div>
				</div>
			</div>
		</div>
	</div>
</div>