<!DOCTYPE html>
<html>
  <head>
    <title>DevcampPortfolio</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="right">
        <%= 'Thank you for visiting from ' + session[:source] if session[:source] %>
        <% if current_user.is_a?(User) %>
          <%= link_to current_user.first_name, edit_user_registration_path, style: 'margin-right:50px; margin-left:50px' %>
          <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
        <% else %>
          <%= link_to 'Register', new_user_registration_path, style: 'margin-right:50px; margin-left:50px' %>
          <%= link_to 'Login', new_user_session_path %>
        <% end %>
    </div>
	  <p class="notice"><%= notice %></p>
	  <p class="alert"><%= alert %></p>
	  
    <%= yield %>
  </body>
</html>
