<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :title, id: :blog_title, placeholder: "Title", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_area :body, id: :blog_body, placeholder: "Content", class: "form-control", rows: 8 %>
  </div>
  
  <div class="form-group">
    <%= form.label :topic_id %>
    <%= form.collection_select(:topic_id, Topic.all, :id, :title,
                              {
                                prompt: ">> Select Topics"
                              },
                              {
                                class: 'form-control'
                              }
                            )
    %>
  </div>

  <div class="form-group">
    <%= form.submit current_action_label, class: "btn btn-primary" %>
  </div>
<% end %>
